extends ../layouts/dashboard.pug

block config
    - var bodyClass = 'sb-nav-fixed'
    - var pageTitle = 'Dashboard';
    - var index = true;
    - var sidenavStyle = 'sb-sidenav-dark'
    
prepend css
    //- Load Simple DataTables Stylesheet
    link(href='https://cdn.jsdelivr.net/npm/simple-datatables@latest/dist/style.css', rel='stylesheet')

block content
    .container-fluid.px-4
        include includes/page-header.pug
        .row
            .col-xl-3.col-md-6
                .card.bg-primary.text-white.mb-4
                    .card-body
                        | Inbox (5+)
                    //- .card-footer.d-flex.align-items-center.justify-content-between
                    //-     a(href='#').small.text-white.stretched-link
                    //-         | View Details
                    //-     .small.text-white
                    //-         i.fas.fa-angle-right
            .col-xl-3.col-md-6
                .card.bg-warning.text-white.mb-4
                    .card-body
                        | Pending Review (2)
                    //- .card-footer.d-flex.align-items-center.justify-content-between
                        //- a(href='#').small.text-white.stretched-link
                        //-     | View Details
                        //- .small.text-white
                        //-     i.fas.fa-angle-right
            .col-xl-3.col-md-6
                .card.bg-success.text-white.mb-4
                    .card-body
                        | Approved (4)
                    //- .card-footer.d-flex.align-items-center.justify-content-between
                    //-     a(href='#').small.text-white.stretched-link
                    //-         | View Details
                    //-     .small.text-white
                    //-         i.fas.fa-angle-right
            .col-xl-3.col-md-6
                .card.bg-danger.text-white.mb-4
                    .card-body
                        | Complaint (0)
                    //- .card-footer.d-flex.align-items-center.justify-content-between
                    //-     a(href='#').small.text-white.stretched-link
                    //-         | View Details
                    //-     .small.text-white
                    //-         i.fas.fa-angle-right
        .row

            .col-xl-12
                .card.mb-4
                    .card-header
                        i.fas.fa-chart-bar.me-1
                        | Metrics
  




                        <div class="card card-header-actions h-100">
                            <div class="card-body">
                                <h4 class="small">
                                    | Food Hubs in use
                                    <span class="float-end fw-bold">20%</span>
                                </h4>
                                <div class="progress mb-4"><div class="progress-bar bg-danger" role="progressbar" style="width: 20%" aria-valuenow="20" aria-valuemin="0" aria-valuemax="100"></div></div>
                                <h4 class="small">
                                    | Volunteers supporting
                                    <span class="float-end fw-bold">40%</span>
                                </h4>
                                <div class="progress mb-4"><div class="progress-bar bg-warning" role="progressbar" style="width: 40%" aria-valuenow="40" aria-valuemin="0" aria-valuemax="100"></div></div>
                                <h4 class="small">
                                    | Restaurant partners
                                    <span class="float-end fw-bold">60%</span>
                                </h4>
                                <div class="progress mb-4"><div class="progress-bar" role="progressbar" style="width: 60%" aria-valuenow="60" aria-valuemin="0" aria-valuemax="100"></div></div>
                                <h4 class="small">
                                    | â€‹Funds raised
                                    <span class="float-end fw-bold">80%</span>
                                </h4>
                                <div class="progress mb-4"><div class="progress-bar bg-info" role="progressbar" style="width: 80%" aria-valuenow="80" aria-valuemin="0" aria-valuemax="100"></div></div>
                                <h4 class="small">
                                    | Spent
                                    <span class="float-end fw-bold">75%</span>
                                </h4>
                                <div class="progress"><div class="progress-bar bg-success" role="progressbar" style="width: 75%" aria-valuenow="100" aria-valuemin="0" aria-valuemax="100"></div></div>
                            </div>
                        </div>

            .col-xl-6
                .card.mb-4
                    .card-header
                        i.fas.fa-chart-area.me-1
                        | Food Consumption
                    .card-body
                        canvas#myAreaChart(width='100%', height='40')
                    
            .col-xl-6
                .card.mb-4
                    .card-header
                        i.fas.fa-chart-bar.me-1
                        | Food Distribution
                    .card-body
                        canvas#myBarChart(width='100%', height='40')

            .col-xl-6
                .card.mb-2
                    .card-header
                        i.fas.fa-chart-bar.me-1
                        | Food Distribution
                    .card-body
                        .div#gauge2(class="gauge-container one")
            .col-xl-6
                .card.mb-2
                    .card-header
                        i.fas.fa-chart-bar.me-1
                        | People in queue
                    .card-body
                        .div#gauge3(class="gauge-container one")



